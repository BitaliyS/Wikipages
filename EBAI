                &copy; 2023 Анализатор EB-1A. Все права защищены.
            </p>
        </div>
    </footer>

    <script>
        // Навигация между секциями
        document.getElementById('startAnalysisBtn').addEventListener('click', function() {
            document.getElementById('criteriaSection').classList.remove('hidden');
            document.getElementById('startAnalysisBtn').scrollIntoView({ behavior: 'smooth' });
        });

        document.getElementById('continueToUploadBtn').addEventListener('click', function() {
            document.getElementById('uploadSection').classList.remove('hidden');
            
            // Показать секции загрузки для выбранных критериев
            if(document.getElementById('awards-checkbox').checked) {
                document.getElementById('awardsUpload').classList.remove('hidden');
            }
            if(document.getElementById('membership-checkbox').checked) {
                document.getElementById('membershipUpload').classList.remove('hidden');
            }
            if(document.getElementById('published-checkbox').checked) {
                document.getElementById('publishedUpload').classList.remove('hidden');
            }
            if(document.getElementById('judging-checkbox').checked) {
                document.getElementById('judgingUpload').classList.remove('hidden');
            }
            if(document.getElementById('contribution-checkbox').checked) {
                document.getElementById('contributionUpload').classList.remove('hidden');
            }
            if(document.getElementById('authorship-checkbox').checked) {
                document.getElementById('authorshipUpload').classList.remove('hidden');
            }
            
            document.getElementById('continueToUploadBtn').scrollIntoView({ behavior: 'smooth' });
        });

        document.getElementById('submitAnalysisBtn').addEventListener('click', function() {
            document.getElementById('processingSection').classList.remove('hidden');
            
            // Симуляция обработки
            let progress = 0;
            const progressBar = document.getElementById('progressBar');
            const progressText = document.getElementById('progressText');
            const interval = setInterval(function() {
                progress += Math.floor(Math.random() * 10) + 5;
                if(progress >= 100) {
                    progress = 100;
                    clearInterval(interval);
                    progressText.textContent = "Анализ завершен!";
                    
                    // Показать результаты после задержки
                    setTimeout(function() {
                        document.getElementById('resultsSection').classList.remove('hidden');
                        document.getElementById('processingSection').classList.add('hidden');
                        document.getElementById('resultsSection').scrollIntoView({ behavior: 'smooth' });
                    }, 1000);
                } else {
                    progressBar.style.width = progress + '%';
                    progressText.textContent = "Обработка документов... " + progress + "%";
                }
            }, 300);
        });

        // Превью загружаемых файлов (упрощено для демо)
        const fileInputs = document.querySelectorAll('input[type="file"]');
        fileInputs.forEach(input => {
            input.addEventListener('change', function() {
                const files = this.files;
                const parentDiv = this.closest('.file-upload');
                if(files.length > 0) {
                    const fileList = document.createElement('div');
                    fileList.className = 'mt-2 text-sm text-gray-600';
                    
                    for(let i = 0; i < files.length; i++) {
                        const fileItem = document.createElement('div');
                        fileItem.className = 'flex items-center mt-1';
                        fileItem.innerHTML = `
                            <i class="fas fa-file-alt text-gray-400 mr-2"></i>
                            <span>${files[i].name}</span>
                            <span class="ml-2 text-xs text-gray-500">(${(files[i].size / 1024).toFixed(1)} KB)</span>
                        `;
                        fileList.appendChild(fileItem);
                    }
                    
                    // Удалить существующее превью
                    const existingPreview = parentDiv.querySelector('.file-list-preview');
                    if(existingPreview) {
                        existingPreview.remove();
                    }
                    
                    fileList.classList.add('file-list-preview');
                    parentDiv.appendChild(fileList);
                }
            });
        });
    </script>
</body>
</html>
